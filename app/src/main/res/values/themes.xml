<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SkillFactoryKotlinTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTheme" parent="Theme.MaterialComponents.Light">

        <item name="colorPrimary">@color/green_light</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorPrimaryVariant">@color/orange_bright</item>
        <item name="colorOnPrimary">@color/red</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="MyTheme.TextSizeSmall">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    
    <style name="MyTheme.NewButton" parent="ThemeOverlay.MaterialComponents">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/blue</item>
    </style>

    <style name="RoundButton" parent="Widget.MaterialComponents.Button">
        <item name="background">@drawable/sample_ripple</item>
        <item name="cornerRadius">@dimen/corner_radius_normal</item>
    </style>

    <style name="RoundButton.WhiteText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextShadow" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:shadowDy">5</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="TextShadowDoubleSize" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:shadowDy">10</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>
</resources>