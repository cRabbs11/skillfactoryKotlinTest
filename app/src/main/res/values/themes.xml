<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SkillFactoryKotlinTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTheme" parent="Theme.MaterialComponents.Light">

        <item name="colorPrimary">@color/blue_light_1</item>
        <item name="colorPrimaryVariant">@color/yellow_bright</item>
        <item name="colorOnPrimary">@color/orange</item>
    </style>

    <style name="MyTheme.TextSizeSmall">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    
    <style name="MyTheme.NewButton" parent="ThemeOverlay.MaterialComponents">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/blue</item>
    </style>
</resources>