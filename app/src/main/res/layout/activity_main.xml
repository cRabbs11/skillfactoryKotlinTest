<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/top_menu_container"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_menu_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/top_menu_drawable" />

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="SkillFactory"
            app:titleTextColor="@color/white"
            app:menu="@menu/top_app_bar"
            app:navigationIcon="@drawable/ic_round_menu_24"/>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:text="@string/copyrights"
        android:linksClickable="true"
        android:autoLink="web"
        android:layout_marginTop="@dimen/sample_margin"
        android:textSize="@dimen/text_size_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/top_menu_container"
        app:layout_constraintStart_toStartOf="@id/top_menu_container"
        app:layout_constraintEnd_toEndOf="@id/top_menu_container"
        />

    <LinearLayout
        android:id="@+id/center_menu_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/sample_margin"
        android:layout_marginTop="@dimen/sample_margin"
        android:layout_marginEnd="@dimen/sample_margin"
        android:layout_marginBottom="@dimen/sample_margin"
        android:background="@color/pink"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/bottom_menu_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_menu_container"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_margin="@dimen/small_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/small_margin"
                app:cardBackgroundColor="@color/pink"
                app:cardCornerRadius="@dimen/corner_radius_normal"
                app:cardElevation="@dimen/elevation_small"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image_view_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test_poster_1"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/small_margin"
                app:cardBackgroundColor="@color/pink"
                app:cardCornerRadius="@dimen/corner_radius_normal"
                app:cardElevation="@dimen/elevation_small"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image_view_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/test_poster_2"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="@dimen/small_margin"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/small_margin"
            app:cardBackgroundColor="@color/pink"
            app:cardCornerRadius="@dimen/corner_radius_normal"
            app:cardElevation="@dimen/elevation_small"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/image_view_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/test_poster_3"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/small_margin"
            app:cardBackgroundColor="@color/pink"
            app:cardCornerRadius="@dimen/corner_radius_normal"
            app:cardElevation="@dimen/elevation_small"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/image_view_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/test_poster_5"/>

        </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_main_menu"
        android:text="@string/btn_main_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/bottom_menu_container"
        app:layout_constraintBottom_toBottomOf="@id/bottom_menu_container"
        app:layout_constraintStart_toStartOf="@id/bottom_menu_container"
        app:layout_constraintEnd_toStartOf="@id/btn_favorites"
        android:layout_marginStart="@dimen/small_margin"
        android:background="@drawable/sample_ripple"
        android:textSize="@dimen/text_size_small"/>

    <Button
        android:id="@+id/btn_favorites"
        android:text="@string/favorites"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/bottom_menu_container"
        app:layout_constraintBottom_toBottomOf="@id/bottom_menu_container"
        app:layout_constraintStart_toEndOf="@id/btn_main_menu"
        app:layout_constraintEnd_toStartOf="@id/btn_later"
        android:layout_marginStart="@dimen/small_margin"
        android:background="@drawable/sample_ripple"
        android:textSize="@dimen/text_size_small"/>

    <Button
        android:id="@+id/btn_later"
        android:text="@string/btn_later"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/bottom_menu_container"
        app:layout_constraintBottom_toBottomOf="@id/bottom_menu_container"
        app:layout_constraintStart_toEndOf="@id/btn_favorites"
        app:layout_constraintEnd_toStartOf="@id/btn_compilations"
        android:layout_marginStart="@dimen/small_margin"
        android:background="@drawable/sample_ripple"
        android:textSize="@dimen/text_size_small"/>

    <Button
        android:id="@+id/btn_compilations"
        android:text="@string/btn_compilations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/bottom_menu_container"
        app:layout_constraintBottom_toBottomOf="@id/bottom_menu_container"
        app:layout_constraintStart_toEndOf="@id/btn_later"
        app:layout_constraintEnd_toStartOf="@id/btn_options"
        android:layout_marginStart="@dimen/small_margin"
        android:background="@drawable/sample_ripple"
        android:textSize="@dimen/text_size_small"/>

    <Button
        android:id="@+id/btn_options"
        android:text="@string/btn_options"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/bottom_menu_container"
        app:layout_constraintBottom_toBottomOf="@id/bottom_menu_container"
        app:layout_constraintStart_toEndOf="@id/btn_compilations"
        app:layout_constraintEnd_toEndOf="@id/bottom_menu_container"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginEnd="@dimen/small_margin"
        android:background="@drawable/sample_ripple"
        android:textSize="@dimen/text_size_small"/>

    <FrameLayout
        android:id="@+id/bottom_menu_container"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_menu_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/green"/>

</androidx.constraintlayout.widget.ConstraintLayout>